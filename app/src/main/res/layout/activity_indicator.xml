<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical"
    android:gravity="center"
    android:background="@color/srl_orange_light">

    <org.chzz.widget.CHZZFixedIndicator
        android:id="@+id/indicator1"
        android:background="@color/srl_green_light"
        app:indicator_triangleColor="@color/srl_red_light"
        app:indicator_triangleHorizontalMargin="5dp"
        app:indicator_triangleHeight="2dp"
        app:indicator_textColor="@color/colorPrimaryDarkTrans"
        app:indicator_textSizeNormal="14sp"
        app:indicator_textSizeSelected="16sp"
        app:indicator_hasDivider="true"
        app:indicator_dividerColor="@color/srl_blue_bright"
        app:indicator_dividerVerticalMargin="5dp"
        app:indicator_dividerWidth="2dp"
        android:layout_width="300dp"
        android:layout_height="40dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager1"
        style="@style/MatchAuto" />

    <org.chzz.widget.CHZZFixedIndicator
        android:id="@+id/indicator2"
        android:background="@color/srl_green_light"
        app:indicator_triangleColor="@color/srl_red_light"
        app:indicator_triangleHorizontalMargin="0dp"
        app:indicator_triangleHeight="2dp"
        app:indicator_textColor="@color/colorPrimaryDarkTrans"
        app:indicator_textSizeNormal="14sp"
        app:indicator_textSizeSelected="16sp"
        app:indicator_hasDivider="true"
        app:indicator_dividerColor="@color/srl_blue_bright"
        app:indicator_dividerVerticalMargin="5dp"
        app:indicator_dividerWidth="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager2"
        android:layout_width="match_parent"
        style="@style/MatchAuto" />

    <org.chzz.widget.CHZZFixedIndicator
        android:id="@+id/indicator3"
        android:background="@color/srl_green_light"
        app:indicator_triangleColor="@color/srl_red_light"
        app:indicator_triangleHorizontalMargin="0dp"
        app:indicator_triangleHeight="2dp"
        app:indicator_textColor="@color/colorPrimaryDarkTrans"
        app:indicator_textSizeNormal="14sp"
        app:indicator_textSizeSelected="16sp"
        app:indicator_hasDivider="false"
        app:indicator_dividerColor="@color/srl_blue_bright"
        app:indicator_dividerVerticalMargin="5dp"
        app:indicator_dividerWidth="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager3"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>