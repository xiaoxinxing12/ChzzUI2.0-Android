<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <Button
        android:id="@+id/but_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adapter" />

    <Button
        android:id="@+id/but_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh" />

    <Button
        android:id="@+id/but_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banner" />

    <Button
        android:id="@+id/but_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="indicator" />

    <Button
        android:id="@+id/but_tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tabLayout" />

    <org.chzz.widget.CHZZSpinner
        android:id="@+id/chzz_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picker_round_selector"
        app:textTint="#000" />

    <org.chzz.widget.CHZZSpinner
        android:id="@+id/chzz_spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTint="#000" />

    <TextView
        android:id="@+id/tv_Time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        android:text="时间" />
</LinearLayout>