<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.chzz.demo">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name="org.chzz.demo.view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.RefreshActivity" />
        <activity android:name=".view.activity.StickyNavActivity" />
        <activity android:name=".view.activity.ViewPagerActivity" />
        <activity android:name=".view.activity.BannerActivity" />
        <activity android:name=".view.activity.ListViewDemoActivity" />
        <activity android:name=".view.activity.AdapterActivity" />
        <activity android:name=".view.activity.IndicatorActivity" />
        <activity android:name=".view.activity.SimpleHomeActivity" />
        <activity android:name=".view.activity.SlidingTabActivity" />
        <activity android:name=".view.activity.CommonTabActivity" />
        <activity android:name=".view.activity.SegmentTabActivity" />
    </application>

</manifest>